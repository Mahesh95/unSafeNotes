<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes_recycler_view_item_title"
            style="@style/recycler_view_item_title_style"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes_recycler_view_item_content"
            style="@style/recycler_view_item_content_style"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes_recycler_view_item_date"
            style="@style/recycler_view_item_date_style"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
